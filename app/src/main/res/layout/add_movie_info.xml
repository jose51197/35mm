<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <ScrollView
        android:layout_width="308dp"
        android:layout_height="211dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/newDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/actors"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Add new director"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/addNewDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/actors"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:text="Add new" />
            </LinearLayout>

            <Spinner
                android:id="@+id/directors"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <Button
                android:id="@+id/addDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add" />

            <TextView
                android:id="@+id/directorsView"
                android:layout_width="match_parent"
                android:layout_height="65dp" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="308dp"
        android:layout_height="244dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/newActor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/actors"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Add new director"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/addNewActor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/actors"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:text="Add new" />
            </LinearLayout>

            <Spinner
                android:id="@+id/actors"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <Button
                android:id="@+id/addActor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add" />

            <TextView
                android:id="@+id/actorsView"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>