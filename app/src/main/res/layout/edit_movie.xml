<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="294dp"
        android:layout_height="434dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textMovie"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Edit movie"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/emovieName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/emovieDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/emovieImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:hint="Image URL"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/emovieYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Year"
                android:inputType="number" />

            <EditText
                android:id="@+id/emovieDirectors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Directors"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/eMovieActors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Actors"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/eMovieGender"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:spinnerMode="dialog" />

            <Button
                android:id="@+id/eaddMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Save" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>